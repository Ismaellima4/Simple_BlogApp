{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
    <div class="alert-alert-suc"></div>
{{/each}}
<div class="card">
    <div class="card-body"></div>
        <h4>Editar postagem:</h4>
        <form action="/admin/postagens/edit" method="post">
            <input type="hidden" value="{{postagem._id}}" name="id">
            <label for="titulo">Título: </label>
            <input type="text" name="titulo" class="form-control" value="{{postagem.titulo}}">
            <label for="slug">Slug: </label>
            <input type="text" name="slug" class="form-control" value="{{postagem.slug}}">
            <label for="descricao">Descrição: </label>
            <input type="text" name="descricao" class="form-control" value="{{postagem.descricao}}">
            <label for="conteudo">Conteúdo</label>
            <textarea name="conteudo" id="" cols="30" rows="10" class="form-control">{{postagem.conteudo}}</textarea>
            <label for="categoria">categoria:</label>
            <select name="categoria">
                {{#each categorias}}
                    <option class="form-control" value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option class="from-control" value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select><br>
            <button class="btn btn-success mt-2" type="submit">Editar postagem</button>
        </form>
</div>